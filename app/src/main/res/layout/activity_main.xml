<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foregroundGravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ListView
        android:id="@+id/lvView"
        android:layout_width="match_parent"
        android:layout_height="150dp">

    </ListView>

    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:completionThreshold="1"
        android:hint="Do something" />

    <Spinner
        android:id="@+id/spDio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_weight="1"

            android:gravity="center"
            android:text="DateTime" />

        <ImageButton
            android:id="@+id/btnimgTime"
            android:layout_width="113dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/img_1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:orientation="horizontal"
        android:paddingTop="10dp">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textSize="10dp"
            android:background="@drawable/layout_button"
            android:text="Intent1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnIntent2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="10dp"
            android:layout_weight="1"
            android:background="@drawable/layout_button"
            android:text="Intent2" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnIntent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textSize="10dp"
            android:background="@drawable/layout_button"
            android:text="Intent3" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnIntent_4"
            android:layout_width="wrap_content"
            android:textSize="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/layout_button"
            android:text="Intent4" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnExit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="10dp"
            android:layout_weight="1"
            android:background="@drawable/layout_button"
            android:text="Exit" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="10dp"
            android:layout_weight="1"
            android:background="@drawable/layout_button"
            android:text="CustomDia" />
    </LinearLayout>

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Do something for intent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDemo"
        android:layout_width="match_parent"
        android:layout_height="100dp">

    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/txtContextMenu"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/teal_200"
        android:layout_height="50dp"
        android:text="What's up, This is Context Menu" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnNavigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:textSize="10dp"
        android:background="@drawable/layout_button"
        android:text="Intent1" />
</LinearLayout>